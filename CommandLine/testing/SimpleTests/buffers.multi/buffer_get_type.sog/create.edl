var buf = buffer_create(1, buffer_fixed, buffer_sizeof(buffer_u8));

gtest_assert_eq(buffer_get_type(buf), buffer_fixed);
gtest_assert_eq(buffer_get_type(buf), 0);
buffer_delete(buf);

buf = buffer_create(1, buffer_grow, buffer_sizeof(buffer_u8));

gtest_assert_eq(buffer_get_type(buf), buffer_grow);
gtest_assert_eq(buffer_get_type(buf), 1);
buffer_delete(buf);

buf = buffer_create(1, buffer_wrap buffer_sizeof(buffer_u8));

gtest_assert_eq(buffer_get_type(buf), buffer_wrap);
gtest_assert_eq(buffer_get_type(buf), 2);
buffer_delete(buf);

buf = buffer_create(1, buffer_fast, buffer_sizeof(buffer_u8));

gtest_assert_eq(buffer_get_type(buf), buffer_fast);
gtest_assert_eq(buffer_get_type(buf), 3);
buffer_delete(buf);

game_end();

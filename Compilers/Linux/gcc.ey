%e-yaml
---
Name: GNU GCC G++
Native: Yes
Maintainer: fundies
Target-platform: Linux

Make-Vars:
  path:
  make: make
  makeflags:
  cc: gcc
  cxx: g++
  cppflags:
  cxxflags: -fdiagnostics-color=always
  cflags:
  ldflags: -lstdc++fs
  links:

Parser-Vars:
  defines: cpp -dM -x c++ --std=c++03 -E /dev/null
  searchdirs: gcc -E -x c++ --std=c++03 -v /dev/null 
  searchdirs-start: "#include <...> search starts here:"
  searchdirs-end: "End of search list."

EXE-Vars:
  resources: $exe
  Build-Extension:
  Run-output: $tempfile
  Run-Program: $game
  Run-Params:
